@model ActivityWebsite.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

@section introdution{
    <!-- Breadcrumb Begin -->
    <section class="breadcrumb-option set-bg" data-setbg="/Content/Media/Images/templates/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h2>Forgot Password</h2>
                        <div class="breadcrumb__widget">
                            <a href="@Url.Action("Index", "Home")">Home</a>
                            <span>Forgot Password</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb End -->
}

@section css{
    <link rel="stylesheet" href="~/Content/css/User/Account/ForgotPassword.css" type="text/css">
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-forgotpassword", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @*Send confirm message if success*@
    if (ViewBag.confirmMessage != null)
    {
        <div class="alert alert-info" role="alert">
            @ViewBag.confirmMessage
        </div>
    }

<div class="subscribe-form">
    @Html.TextBoxFor(m => m.Email, new { @class = "subscribe-form-input", @placeholder="Enter your email" })
    <button type="submit" class="subscribe-form-button">Send Email</button>
</div>
}


@section Scripts {
    @Scripts.Render("~/plugin/jqueryval")
}
