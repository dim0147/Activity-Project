@model ActivityWebsite.Models.ChangeUsernameViewModel
@{
    ViewBag.Title = "ChangeUsername";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BCHeader = "Change Username";
    ViewBag.BCAction = "Index";
    ViewBag.BCController = "Manage";
    ViewBag.BCActionText = "Manage";

    ViewBag.ProfileLinkClass = "active-link";
}
@Html.Partial("_Breadcrumb")


<section class="blog-details spad">
    <div class="container">
        <div class="row">
            @Html.Partial("_LeftPanel")
            <div class="col-lg-8 order-lg-2 order-1">
                @if (ViewBag.successMessage != null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.successMessage
                    </div>
                }

                @using (Html.BeginForm("ChangeUsername", "Manage", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Current Username: @ViewBag.user.UserName</label>
                    </div>
                    <div class="form-group">
                        <label>Change to:</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "ip-focus", placeholder = "Enter your new Username" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section scripts{
    @Scripts.Render("~/plugin/jqueryval")    
}